@using EntityLayer.Concrete
@model List<Job>
@{
    ViewData["Title"] = "Meslekler";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1 class="mt-4">Meslek Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Meslek Adı</th>
        <th>Detaylar</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.JobID</td>
            <td>@item.Name</td>
            <td><a href="#" class="btn btn-primary">Detaylar</a></td>
            <td><a href="/Job/UpdateJob/@item.JobID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Job/DeleteJob/@item.JobID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>

