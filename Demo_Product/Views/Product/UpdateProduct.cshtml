@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "Ürün Güncelleme";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1 class="mt-4">Ürün Güncelleme</h1>

<form method="post">
    @Html.Label("Ürün ID:")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(x => x.ID)
    <br />
    @Html.Label("Ürün Adı:")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Ürün Fiyatı:")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Price)
    <br />
    @Html.Label("Ürün Stoğu:")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Stock)
    <br />
    <button class="btn btn-info"> Ürün Güncelle</button>
</form>
