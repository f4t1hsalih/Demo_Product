@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<h1 class="mt-4">Ürün Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td><a href="/Product/UpdateProduct/@item.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Product/DeleteProduct/@item.ID" class="btn btn-outline-danger">Sil</a></td>
        </tr>

    }
</table>

