@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "Müşteri Güncelleme";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1 class="mt-4">Müşteri Bilgileri Güncelleme</h1>

<form method="post">
    @Html.Label("Müşteri ID:")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(x => x.ID)
    <br />
    @Html.Label("Müşteri Adı:")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Müşteri Şehri:")
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.City)
    <br />
    <button class="btn btn-info">Müşteri Güncelle</button>
</form>
