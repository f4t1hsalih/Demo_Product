@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1 class="mt-4">Kategoriler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>